@model List<EShop.Domain.Domain_Models.Product>
@{
    ViewData["Title"] = "Welcome to Our BookStore";
}

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Hero Banner Section -->
<section class="hero-banner bg-primary text-white py-5 mb-5 rounded">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">📚 Welcome to Our Bookstore</h1>
                <p class="lead mb-4">Discover amazing books from the magical world of Harry Potter and beyond. Find your next favorite read today!</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="bi bi-book me-2"></i>Browse All Books
                    </a>
                    <a href="#featured-products" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-star me-2"></i>Featured Books
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="bi bi-book-half display-1"></i>
                    <div class="mt-3">
                        <i class="bi bi-stars text-warning"></i>
                        <span class="ms-2">Premium Collection</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-4 mb-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-3">
                <div class="stat-card p-3">
                    <i class="bi bi-book display-4 text-primary mb-2"></i>
                    <h4 class="fw-bold">@(Model?.Count ?? 0)+</h4>
                    <p class="text-muted mb-0">Books Available</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card p-3">
                    <i class="bi bi-people display-4 text-success mb-2"></i>
                    <h4 class="fw-bold">1000+</h4>
                    <p class="text-muted mb-0">Happy Readers</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card p-3">
                    <i class="bi bi-truck display-4 text-warning mb-2"></i>
                    <h4 class="fw-bold">Fast</h4>
                    <p class="text-muted mb-0">Delivery</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card p-3">
                    <i class="bi bi-shield-check display-4 text-info mb-2"></i>
                    <h4 class="fw-bold">Secure</h4>
                    <p class="text-muted mb-0">Payment</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Book Features Section -->
<section class="book-features py-5 mb-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="h3 fw-bold mb-2">📖 Why Choose Our Books?</h2>
                <p class="text-muted mb-0">Discover what makes our bookstore special</p>
            </div>
        </div>
        
        <div class="row g-4">
            <!-- Feature 1: Wide Selection -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-collection display-4 text-primary"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Wide Selection</h5>
                    <p class="text-muted mb-0">Thousands of books across all genres - from fantasy adventures to educational materials.</p>
                </div>
            </div>
            
            <!-- Feature 2: Quality Guarantee -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-patch-check display-4 text-success"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Quality Guarantee</h5>
                    <p class="text-muted mb-0">All our books are carefully selected and quality-checked before reaching you.</p>
                </div>
            </div>
            
            <!-- Feature 3: Digital & Physical -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-tablet-landscape display-4 text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Digital & Physical</h5>
                    <p class="text-muted mb-0">Choose between physical books or instant digital downloads for immediate reading.</p>
                </div>
            </div>
            
            <!-- Feature 4: Community Reviews -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-chat-heart display-4 text-info"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Community Reviews</h5>
                    <p class="text-muted mb-0">Read authentic reviews from our book-loving community to find your perfect read.</p>
                </div>
            </div>
        </div>
        
        <!-- Additional Features Row -->
        <div class="row g-4 mt-2">
            <!-- Feature 5: Author Spotlights -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-highlight d-flex align-items-center p-3 bg-white rounded shadow-sm">
                    <div class="feature-icon-small me-3">
                        <i class="bi bi-person-badge display-6 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Author Spotlights</h6>
                        <p class="text-muted mb-0 small">Meet your favorite authors and discover new voices in literature.</p>
                    </div>
                </div>
            </div>
            
            <!-- Feature 6: Book Recommendations -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-highlight d-flex align-items-center p-3 bg-white rounded shadow-sm">
                    <div class="feature-icon-small me-3">
                        <i class="bi bi-lightbulb display-6 text-success"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Smart Recommendations</h6>
                        <p class="text-muted mb-0 small">Get personalized book suggestions based on your reading preferences.</p>
                    </div>
                </div>
            </div>
            
            <!-- Feature 7: Book Clubs -->
            <div class="col-lg-4 col-md-12">
                <div class="feature-highlight d-flex align-items-center p-3 bg-white rounded shadow-sm">
                    <div class="feature-icon-small me-3">
                        <i class="bi bi-people-fill display-6 text-warning"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Book Clubs</h6>
                        <p class="text-muted mb-0 small">Join our reading communities and discuss your favorite books with fellow readers.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
@if (Model != null && Model.Any())
{
    <section id="featured-products" class="featured-products py-4">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12 text-center">
                    <h2 class="h3 fw-bold mb-2">✨ Featured Books</h2>
                    <p class="text-muted mb-0">Discover our handpicked collection</p>
                </div>
            </div>
            
            <!-- Books Grid -->
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card product-card h-100 border-0 shadow-sm">
                            <div class="position-relative overflow-hidden">
                                @if (!string.IsNullOrEmpty(product.ProductImage))
                                {
                                    <img src="@product.ProductImage" class="card-img-top product-image" alt="@product.ProductName" loading="lazy" style="height: 300px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="no-image-placeholder d-flex align-items-center justify-content-center" style="height: 300px; background-color: #f8f9fa;">
                                        <i class="bi bi-book display-4 text-muted"></i>
                                    </div>
                                }
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-primary rounded-pill px-3 py-2">New</span>
                                </div>
                            </div>
                            
                            <div class="card-body p-4 d-flex flex-column">
                                <h5 class="card-title fw-bold mb-3" title="@product.ProductName">
                                    @product.ProductName
                                </h5>
                                
                                <p class="card-text text-muted mb-3 flex-grow-1">
                                    @(product.ProductDescription.Length > 120 ? product.ProductDescription.Substring(0, 120) + "..." : product.ProductDescription)
                                </p>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price fw-bold text-success fs-5">$@product.ProductPrice</span>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            @if (i <= product.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                    </div>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Products" asp-action="AddToCart" asp-route-id="@product.Id" 
                                           class="btn btn-primary add-to-cart-btn">
                                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-area="Identity" asp-page="/Account/Login" 
                                           class="btn btn-warning">
                                            <i class="bi bi-person-lock me-2"></i>Login to Add to Cart
                                        </a>
                                    }
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                       class="btn btn-outline-secondary">
                                        <i class="bi bi-eye me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-grid me-2"></i>View All Books
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="no-products py-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-12">
                    <i class="bi bi-book display-1 text-muted mb-3"></i>
                    <h3 class="mb-3">No Products Available Yet</h3>
                    <p class="text-muted mb-4">We're working on adding amazing books to our collection!</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Refresh
                    </a>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <style>
        .add-to-cart-btn {
            transition: all 0.3s ease;
        }
        
        .add-to-cart-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        
        .adding-to-cart {
            background-color: #28a745 !important;
            border-color: #28a745 !important;
        }
        
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .spin {
            animation: spin 1s linear infinite;
        }
    </style>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add click feedback for Add to Cart buttons
            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
            
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Add visual feedback
                    const originalHtml = this.innerHTML;
                    
                    // Show loading state
                    this.innerHTML = '<i class="bi bi-arrow-repeat spin me-2"></i>Adding...';
                    this.classList.add('adding-to-cart');
                    this.style.pointerEvents = 'none';
                    
                    // Don't prevent default - let the navigation happen
                });
            });
        });
    </script>
}
